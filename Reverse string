import java.util.*;
public class PROG1
{
	public static void main(String[] args) 
	{
		Scanner sc= new Scanner(System.in);
		System.out.println("Enter a string: ");
		String a=sc.next();
		char b;
		String reverse=" ";
		for(int i=0;i<a.length();i++)
		{
			b=a.charAt(i);
			reverse=b+reverse;
		}
		System.out.println("Original word: "+a);
		System.out.println("Reverse word: "+reverse);
	}
}
